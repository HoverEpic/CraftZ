		if (eventWorld.getName().equalsIgnoreCase(value_world_name)) {
			
			if (event.getDamager() instanceof Player && event.getCause() == DamageCause.ENTITY_ATTACK) {
				
				
				
			}
		
		}
		
	}
	
	
	
	private CraftZ plugin;
	
}