//			
//			Map<Player, Inventory> savedInvs = plugin.getSavedInventories();
//			savedInvs.put(eventPlayer, evtPlrInv);
//			plugin.setSavedInventories(savedInvs);
		
		}
		
	}
	
	
	
	
	private CraftZ plugin;
	
}
